// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model UserAccessToken {
  discord_user_id String   @id
  token_type      String
  access_token    String
  encryptedToken  String
  expires_in      Int
  refresh_token   String
  scope           String
  createdAt       DateTime @default(now())
}

model Tiers {
  id                          String   @id @default(cuid())
  name                        String
  price                       Float
  made_by                     String
  description                 String
  avatar_url                  String
  premium_discord_channels    String[] @default([])
  premium_discord_roles       String[] @default([])
  premium_additional_benefits String[] @default([])
  createdAt                   DateTime @default(now())
  guild_id                    String
}

model PaymentMethods {
  guild_id                      String   @id
  discord_user_id               String
  connected_stripe_account_id   String?
  connected_paypal_access_token String?
  createdAt                     DateTime @default(now())
}
